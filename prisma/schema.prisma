generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Club {
  id String  @id @default(uuid())
  name String @unique
  players Player[]

  @@map("clubs")
}

model PlayerStatistics {
  id        String @id @default(uuid())

  Overall   Int
  Pace      Int
  Shooting  Int
  Passing   Int
  Dribbling Int
  Defending Int
  Physical  Int

  playerId  String @unique
  player    Player @relation(fields: [playerId], references: [id])

  @@map("statistics")
}

model Player{
  id String  @id @default(uuid())
  name String 
  nationality String
  position String
  statistics PlayerStatistics?
  clubName String?
  clubs Club? @relation(fields: [clubName], references: [name])

  @@map("players")
}